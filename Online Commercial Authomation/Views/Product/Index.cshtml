@using Online_Commercial_Authomation.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>NAME</th>
        <th> BRAND</th>
        <th>STOCK</th>
        <th>PURCHASE PRİCE</th>
        <th>SALE PRİCE</th>
        <th>CATEGORY</th>
        <th>IMAGE</th>
        <th>DELETE</th>
        <th>UPDATE</th>

    </tr>

    @foreach (var product in Model)
    {
<tr>
    <td>@product.ProductsId</td>
    <td>@product.ProductName</td>
    <td>@product.ProductBrand</td>
    <td>@product.Stock</td>
    <td>@product.PurchasePrice</td>
    <td>@product.SalePrice</td>
    <td>@product.Category.CategoryName</td>
    <td>@product.ProductImage</td>

    <td><a href="/Product/ProductDelete/@product.ProductsId" class="btn btn-danger">DELETE</a></td>
    <td><a href="/Product/ProductFind/@product.ProductsId" class="btn btn-info">UPDATE</a></td>


</tr>
    }

</table>

<a href="/Product/ProductAdd" class="btn btn-success"><b>ADD NEW PRODUCT</b></a>

