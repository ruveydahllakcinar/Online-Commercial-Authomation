@using Online_Commercial_Authomation.Models.Classes
@model List<Employee>
@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>DEPARTMENT DETAIL PAGE</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Department Name: @ViewBag.department</li>
</ol>


<table class="table table-hover">
    <tr>
        <th>EMPLOYEE ID</th>
        <th> NAME</th>
        <th> SURNAME</th>
        <th>IMAGE</th>
        <th>SALES</th>

    </tr>
    @foreach (var employee in Model)
    {


        <tr>
            <td>@employee.EmployeeId</td>
            <td>@employee.EmployeeName</td>
            <td>@employee.EmployeeSurname</td>
            <td>@employee.EmployeeImage</td>
            <td><a href="/Department/DepartmentEmployeeSale/@employee.EmployeeId" class="btn btn-default" style="background-color:#41b7b7">SALES</a></td>
        </tr>
    }
</table>